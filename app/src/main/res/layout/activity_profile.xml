<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#512da8"
        app:elevation="0dp"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#10AF7E">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="18dp"
                    android:foreground="@drawable/ic_arrow_back_white_24dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="31dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="115dp"
                    android:layout_marginLeft="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo_2" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="85dp"
        tools:layout_editor_absoluteX="-9dp"
        tools:layout_editor_absoluteY="82dp">

        <TextView
            android:id="@+id/textView54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="Tài khoản"
            android:textSize="28dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="80dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView32"
                android:layout_width="115dp"
                android:layout_height="91dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/user" />

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="147dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ tên"
                    tools:layout_editor_absoluteX="179dp"
                    tools:layout_editor_absoluteY="143dp" />

                <TextView
                    android:id="@+id/txtProfileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    tools:layout_editor_absoluteX="179dp"
                    tools:layout_editor_absoluteY="174dp" />

                <TextView
                    android:id="@+id/txtProfilePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    tools:layout_editor_absoluteX="179dp"
                    tools:layout_editor_absoluteY="204dp" />

                <TextView
                    android:id="@+id/txtProfileBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh"
                    tools:layout_editor_absoluteX="179dp"
                    tools:layout_editor_absoluteY="240dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Tuyến đường đã lưu"
            android:textSize="28dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="312dp" />


        <TextView
            android:id="@+id/txtProfileMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingStart="16dp"
            android:text=""
            android:textColor="#ff3d00"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/listSavedRoute"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingLeft="30dp">

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="132dp"
                android:layout_height="59dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#10af7e"
                android:text="Đăng xuất"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="655dp" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="132dp"
                android:layout_height="59dp"
                android:layout_marginLeft="60dp"
                android:backgroundTint="#10af7e"
                android:text="Chỉnh sửa"
                tools:layout_editor_absoluteX="241dp"
                tools:layout_editor_absoluteY="656dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>